<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="手机防盗" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:id="@+id/tv_safe_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="安全号码"
            android:textSize="18sp"/>
        <ImageView
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listview_divider"
            android:layout_below="@id/tv_safe_phone_number"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="防盗保护是否开启"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/iv_safe_lock"
            android:background="@drawable/lock"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listview_divider"
            android:layout_below="@id/iv_safe_lock"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_reset_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重新进入设置向导"
        android:textSize="18sp"
        android:textColor="#000"
        android:background="@drawable/selector_reset_setup_bg"/>
    <ImageView
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_divider"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="功能介绍"
        android:textSize="18sp"
        android:textColor="#000"
        android:padding="5dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        style="@style/TextInfoStyle"
        android:text="GPS跟踪#*location*#"/>
    <TextView
        style="@style/TextInfoStyle"
        android:text="播放报警音乐#*alarm*#"/>
    <TextView
        style="@style/TextInfoStyle"
        android:text="远程删除数据#*wipedata*#"/>
    <TextView
        style="@style/TextInfoStyle"
        android:text="远程锁屏#*lockscreen*#"/>
</LinearLayout>
